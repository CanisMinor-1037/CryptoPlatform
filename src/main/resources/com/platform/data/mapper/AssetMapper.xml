<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.platform.data.mapper.AssetMapper">
    <select id="selectCountGroupByField" resultType="com.platform.data.entity.dto.NameAndValue">
        select field as name,count(1) as value from t_data_asset group by field;
    </select>
    <select id="selectCountGroupByLocation" resultType="com.platform.data.entity.dto.NameAndValue">
        select location as name,count(1) as value from t_data_asset group by location;
    </select>
    <select id="getStorageInfo" resultType="com.platform.data.entity.dto.Storage">
        select name,owner,createTime from t_data_asset;
    </select>
</mapper>
